<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-30dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <androidx.cardview.widget.CardView
        android:id="@+id/order_detail_cardview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/order_detail_imageview_id"
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round">

            </ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/purchased_product_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/purchased_product_price_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purchased_product_name_id"
                    android:text="@string/price"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/purchased_product_price_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purchased_product_name_id"
                    android:layout_alignBaseline="@+id/purchased_product_price_text_id"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_toEndOf="@+id/purchased_product_price_text_id"
                    android:layout_toRightOf="@+id/purchased_product_price_text_id"
                    android:text="@string/price"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/purchased_product_quantity_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purchased_product_price_id"
                    android:text="@string/quantity"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/purchased_product_quantity_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/purchased_product_quantity_text_id"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:layout_toEndOf="@+id/purchased_product_quantity_text_id"
                    android:layout_toRightOf="@+id/purchased_product_quantity_text_id"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purchased_product_quantity_id"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="68dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/purchased_total_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>